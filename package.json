{
  "name": "lingo-guardian",
  "version": "0.1.0",
  "private": true,
  "description": "The Automated DevSecOps Firewall for Internationalization",
  "author": "Lingo-Guardian Team",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*",
    "demo/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}