{
    "name": "@lingo-guardian/cli",
    "version": "0.1.0",
    "description": "CLI tool to detect i18n layout issues - CSS overflows, RTL breaks, and text expansion problems. Powered by Lingo.dev",
    "author": "Lingo-Guardian Team",
    "license": "MIT",
    "type": "module",
    "bin": {
        "lingo-guardian": "./dist/bin/cli.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node ./dist/bin/cli.js",
        "lint": "eslint src --ext .ts",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "clean": "rm -rf dist",
        "postinstall": "npx playwright install chromium"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "ora": "^8.0.1",
        "playwright": "^1.58.1",
        "table": "^6.8.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "i18n",
        "internationalization",
        "localization",
        "lingo.dev",
        "overflow",
        "rtl",
        "ltr",
        "css",
        "lint",
        "devtools"
    ]
}
