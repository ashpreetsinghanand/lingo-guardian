{
    "name": "lingo-guardian",
    "version": "0.1.10",
    "description": "CLI tool to detect i18n layout issues - CSS overflows, RTL breaks, and text expansion problems. Powered by Lingo.dev",
    "author": "Lingo-Guardian Team",
    "license": "MIT",
    "type": "module",
    "bin": {
        "lingo-guardian": "./dist/bin/cli.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ashpreetsinghanand/lingo-guardian.git"
    },
    "homepage": "https://github.com/ashpreetsinghanand/lingo-guardian#readme",
    "bugs": {
        "url": "https://github.com/ashpreetsinghanand/lingo-guardian/issues"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node ./dist/bin/cli.js",
        "lint": "eslint src --ext .ts",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run build"
    },
    "dependencies": {
        "@types/sharp": "^0.31.1",
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "express": "^5.2.1",
        "ora": "^8.0.1",
        "playwright": "^1.40.0",
        "sharp": "^0.34.5",
        "table": "^6.8.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "i18n",
        "internationalization",
        "localization",
        "lingo.dev",
        "lingo",
        "overflow",
        "rtl",
        "ltr",
        "css",
        "lint",
        "devtools",
        "react",
        "testing",
        "accessibility"
    ],
    "publishConfig": {
        "access": "public"
    }
}